<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp" app:srcCompat="@color/colorPrimaryDark"
            android:id="@+id/playerHit4"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/playerCard2" app:layout_constraintStart_toEndOf="@+id/playerHit3"
    />
    <ImageView
            android:layout_width="60dp"
            android:layout_height="72dp" app:srcCompat="@drawable/red_back"
            android:id="@+id/playerCard2"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toEndOf="@+id/playerCard1"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp" app:srcCompat="@color/colorPrimaryDark"
            android:id="@+id/playerHit1"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/playerCard1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp" app:srcCompat="@color/colorPrimaryDark"
            android:id="@+id/playerHit3"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/playerCard2"
            app:layout_constraintStart_toEndOf="@+id/playerHit2"
    />
    <ImageView
            android:layout_width="60dp"
            android:layout_height="72dp" app:srcCompat="@drawable/red_back"
            android:id="@+id/playerCard1"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp" app:srcCompat="@color/colorPrimaryDark"
            android:id="@+id/playerHit2"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/playerCard2"
            app:layout_constraintStart_toEndOf="@+id/playerHit1"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp" app:srcCompat="@color/colorPrimaryDark"
            android:id="@+id/dealerHit4"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dealerCard2" app:layout_constraintStart_toEndOf="@+id/dealerHit3"
    />
    <TextView
            android:text="Dealer Cards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="72dp" app:srcCompat="@drawable/red_back"
            android:id="@+id/dealerCard1"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="72dp" app:srcCompat="@drawable/red_back"
            android:id="@+id/dealerCard2"
            app:layout_constraintStart_toStartOf="@+id/dealerCard1"
            android:layout_marginLeft="60dp" android:layout_marginStart="60dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/textView4"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp" app:srcCompat="@color/colorPrimaryDark"
            android:id="@+id/dealerHit1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dealerCard1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp" app:srcCompat="@color/colorPrimaryDark"
            android:id="@+id/dealerHit2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dealerCard2" app:layout_constraintStart_toEndOf="@+id/dealerHit1"
    />
    <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp" app:srcCompat="@color/colorPrimaryDark"
            android:id="@+id/dealerHit3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dealerCard2"
            app:layout_constraintStart_toEndOf="@+id/dealerHit2"/>
    <TextView
            android:text="Player Cards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/dealerHit1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <Button
            android:text="Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playButton" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/playerHit1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <Button
            android:text="Hit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hitButton" app:layout_constraintStart_toEndOf="@+id/playButton"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/playerHit3" android:visibility="invisible"/>
    <Button
            android:text="Stay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stayButton" app:layout_constraintStart_toEndOf="@+id/hitButton"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/playerHit4" android:visibility="invisible"/>
    <TextView
            android:layout_width="162dp"
            android:layout_height="163dp"
            android:id="@+id/resultsTextView" app:layout_constraintStart_toEndOf="@+id/dealerHit4"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>